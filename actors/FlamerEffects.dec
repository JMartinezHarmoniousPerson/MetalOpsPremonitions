//Icethrower stuff
Actor IcicleSpawner
{
	 -CLIENTSIDEONLY
	+NODAMAGETHRUST
	Alpha 0.9
	RenderStyle Add
	Scale 0.8
	Radius 4
	Height 8
	+NOBLOCKMAP
	+NOTELEPORT
	+DONTSPLASH
	+NOTARGET
	States
	{
		Spawn:
			TNT1 A 0
			TNT1 A 0 A_CheckCeiling("SpawnOnCeiling")
			TNT1 A 0 A_CheckFloor("SpawnOnFloor")
			Stop
		SpawnOnFloor:
			TNT1 A 0 A_SpawnItemEx("FloorIcicle",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION,0)
			Stop
		SpawnOnCeiling:
			TNT1 A 0 //A_Log("Cieling hit")
			TNT1 A 0 A_SpawnItemEx("CielingIcicle",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION,0)
			Stop
	}
}

//From PB
Actor FloorIcicle
{
	-SOLID
	+THRUACTORS
	+FLOORHUGGER
	+FORCEYBILLBOARD 
	Gravity 500.0
	Mass 1000000
	Radius 4
	Health 300
	Height 6
	Scale 1.0

	States
	{
	Spawn:
		TNT1 A 0 A_JumpIf(waterlevel > 1, "Death")
		TNT1 A 0 
		ISHT A 1 A_SetScale(frandom(0.6, 1.0),frandom(0.3, 0.5))
		ISHT ABCDEF 6 BRIGHT
		ISHT F 350 BRIGHT
		ISHT EEDDCCBBAA 1 A_FadeOut(0.1)
		Stop
	Death:
		TNT1 A 1
		Stop
	}
}

