//In Decorate because ZScript was having issues.

ACTOR GroundFlameSpawner
{
    -CLIENTSIDEONLY
	+NODAMAGETHRUST
	Alpha 0.9
	RenderStyle Add
	Scale 1.0
	Speed 15
	DamageType "Fire"
	Radius 0
	Height 0
	+NOBLOCKMAP
	+NOTELEPORT
	+DONTSPLASH
	States
	{
		Spawn:
			TNT1 A 0
			TNT1 A 1 A_CheckFloor(1)
			Stop
			TNT1 AA 0
			TNT1 A 0 A_StartSound("smallflames/loop", CHAN_BODY, CHANF_NOSTOP)
			TNT1 A 1 Light("FlamerFlames")
			TNT1 A 0 A_SpawnItemEx("FlamerGroundedFlames", random(-24,24), random(-7,7), random(1,2))
			TNT1 A 0 A_SpawnItemEx("BlackSmokeFromFire", random(-7,7), random(-7,7), random(12,24), 0, 0 , random(2,4))
			TNT1 A 0 A_Explode(3, 30, 0, 0, 36)
			TNT1 A 0 A_Jump(14,"STOPBURNING")
			Loop
		
		StopBurning:
			TNT1 A 0 A_StopSound(CHAN_BODY)
			TNT1 AAAAAAAA 2 Light("FlamerFlames")
			Stop
    }
}

